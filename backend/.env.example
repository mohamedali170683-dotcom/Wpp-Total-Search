# ===========================================
# Wpp-Total-Search Configuration
# ===========================================
# Copy this file to .env and fill in your values

# App Settings
APP_NAME=Wpp-Total-Search
DEBUG=true

# Demo Mode
# Set to true to use sample data (no API keys needed)
# Set to false to use real APIs
USE_DEMO_DATA=true

# ===========================================
# API Keys (required when USE_DEMO_DATA=false)
# ===========================================

# KeywordTool.io API
# Sign up at: https://keywordtool.io/api
# Pricing: $89/mo (Basic) | $199/mo (Business)
KEYWORDTOOL_API_KEY=

# Meta Ad Library API
# Setup: https://developers.facebook.com
# Requires: Identity verification + App creation
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=

# TikTok Commercial Content API
# Setup: https://developers.tiktok.com/products/commercial-content-api
# Requires: Developer account + Application approval
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_ACCESS_TOKEN=

# Google Ads Transparency (optional wrappers)
# SerpAPI: https://serpapi.com
SERPAPI_KEY=

# SearchAPI.io: https://searchapi.io
SEARCHAPI_KEY=

# ===========================================
# Infrastructure (optional)
# ===========================================

# Redis for caching
REDIS_URL=redis://localhost:6379

# Rate Limiting
KEYWORDTOOL_RATE_LIMIT=5
